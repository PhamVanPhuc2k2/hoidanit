<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Get CRUD</title>
    </head>
    <body>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td,
            th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
            .btn-edit{
                background-color: green;
                border: none;
                cursor: pointer;
                margin-right: 20px;
                padding: 5px 5px;
                border-radius: 5px;
            }
            .btn-delete{
                background-color: red;
                border: none;
                cursor: pointer;
                padding: 5px 5px;
                border-radius: 5px;
            }
        </style>
        <h1>Get CRUD from view</h1>
        <table>
            <tr>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Address</th>
                <th>Acction</th>
            </tr>
            <% for(let i=0; i<dataTable.length; i++) {%>
                <tr>
                  <td>
                    <%= dataTable[i].email%>
                  </td>
                  <td>
                    <%= dataTable[i].firstName%>
                  </td>
                  <td>
                    <%= dataTable[i].lastName%>
                  </td>
                  <td>
                    <%= dataTable[i].address%>
                  </td>
                  <td>
                    <a href="/edit-crud?id=<%=dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%=dataTable[i].id%>" class="btn-delete" type="button">Delete</a>
                  </td>
                </tr>
             <% } %>
        </table>
    </body>
</html>
